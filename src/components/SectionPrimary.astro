---
const { id, padding = true, cover = false, bg } = Astro.props;
---

<section
  id={id}
  class=`${cover ? "cover-applied" : ""} ${bg? bg : ""} text-white text-center`
>
  <div
    class=`d-flex flex-column align-items-center ${padding == true ? "padding-applied" : ""}`
  >
    <!-- this render childrens -->
    <slot />
  </div>
</section>

<style>
  section {
    background-position: center;
    background-image: url("../assets/fondo.webp");
  }
  section.shows-bg {
    background-image: url("../assets/eventos.webp");
  }
  .padding-applied {
    padding: 4rem 2rem;
  }
  .cover-applied {
    background-size: cover;
    background-attachment: fixed;
  }
  div {
    margin: 0 auto;
    background-color: rgba(0, 0, 0, 0.75);
  }
</style>
