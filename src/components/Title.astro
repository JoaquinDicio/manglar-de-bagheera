---
const { firstLine, secondLine } = Astro.props;
---

<h2 class="text-white text-center">
  {firstLine}<br />
  <span>{secondLine}</span>
</h2>

<style>
  h2,
  span {
    font-family: var(--main-font);
  }
  h2 {
    font-size: 1.4rem;
    line-height: 1.4;
    text-transform: uppercase;
  }
  span {
    background-color: var(--main-color);
    padding: 2px 10px 4px 10px;
  }
</style>
