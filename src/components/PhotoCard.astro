---
const { text, textButton, href, blank = false } = Astro.props;
---

<div class="bg d-flex justify-content-center align-items-center">
  <div
    class="low-opacity d-flex flex-column align-items-center justify-content-center"
  >
    <p class="text-center text-white">{text}</p>
    <a class="text-white" target={blank && "_blank"} href={href}>{textButton}</a
    >
  </div>
</div>

<style>
  p {
    font-size: 1rem;
    width: 60%;
    font-weight: 500;
  }
  a {
    padding: 0.5rem 2.5rem;
    margin-top: 1rem;
    border: 1px solid #fff;
    text-transform: uppercase;
    text-decoration: none;
  }
  a:hover {
    background-color: #fff;
    color: #1d1d1d;
    transition: 0.5s;
    cursor: pointer;
  }
  div.low-opacity {
    background-color: rgba(0, 0, 0, 0.6);
    height: 100%;
    width: 100%;
  }
  .bg {
    flex-grow: 1;
    min-height: 33vw;
    max-width: 33vw;
    min-width: 320px;
    background-size: cover;
  }
  .bg:nth-child(1) {
    background-image: url("../assets/gastronomia.jpg");
  }
  .bg:nth-child(2) {
    background-image: url("../assets/party-friends.webp");
    background-position: bottom;
  }
  .bg:nth-child(3) {
    background-image: url("../assets/shows.webp");
    background-position-y: -200px;
  }

  @media (max-width: 768px) {
    .bg {
      max-width: 100vw;
      min-height: 100vw;
    }
  }
</style>
